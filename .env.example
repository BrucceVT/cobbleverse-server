# ── Minecraft Server ─────────────────────────────
MEMORY=4G
DIFFICULTY=normal
MODE=survival
MAX_PLAYERS=20
MOTD=§6Cobbleverse §7— §aCatch them all!
VIEW_DISTANCE=10
SIMULATION_DISTANCE=8
SEED=
LEVEL=world
ONLINE_MODE=true

# ── Network ──────────────────────────────────────
